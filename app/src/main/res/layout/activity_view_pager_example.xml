<?xml version="1.0" encoding="UTF-8"?>

<androidx.viewpager.widget.ViewPager xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/view_pager">

    <com.google.android.material.tabs.TabLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        app:tabRippleColor="@color/two"
        app:tabTextColor="@color/two"
        android:outlineAmbientShadowColor="@color/two"
        app:tabIndicatorColor="@color/two"

        android:layout_height="wrap_content"
        android:id="@+id/tabs"/>

</androidx.viewpager.widget.ViewPager>